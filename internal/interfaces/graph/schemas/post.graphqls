type Post {
  id: ID!
  title: String!
  body: String!
  authorId: ID!
  author: User! @goField(forceResolver: true)
  updatedAt: DateTime!
  createdAt: DateTime!
}

input CreatePostInput {
  title: String!
  body: String!
}

extend type Mutation {
  createPost(input: CreatePostInput!): Post! @auth
}

extend type Query {
  post(id: ID!): Post
  posts(limit: Int, offset: Int): [Post!]!
}
